all: 

bov2imgcube: bov2imgcube.c
	gcc -O -Wall -fPIC -I/glade/u/home/shaomeng/QccPack/include  -DQCCCOMPRESS=/usr/bin/gzip -DQCCUNCOMPRESS=/usr/bin/gunzip -DQCCPACK_WAVELET_PATH_DEFAULT=.:/glade/u/home/shaomeng/QccPack/install/share/QccPack/Wavelets -DQCCPACK_CODES_PATH_DEFAULT=.:/glade/u/home/shaomeng/QccPack/install/share/QccPack/Codes  -DHAVE_SPIHT -DHAVE_SPECK    -o bin/bov2imgcube bov2imgcube.c -L/glade/u/home/shaomeng/QccPack/lib -lQccPack  -lpthread  -lm

